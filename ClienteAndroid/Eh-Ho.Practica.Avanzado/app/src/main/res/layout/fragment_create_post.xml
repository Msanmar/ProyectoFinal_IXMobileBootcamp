<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_marginTop="32dp"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textStyle="bold"
                android:text="Datos para el nuevo POST:" />


            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/inputTitle"
                android:padding="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/colorAccent"
                android:hint="...escribe el título del nuevo post" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/inputContent"
                android:padding="32dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textColorHint="@color/colorAccent"
                android:hint="... escribe el contenido del nuevo post"
                android:textAlignment="center"
                android:minHeight="112dp" />




            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Creando POST en topic con ID:"
                android:textAlignment="center"
                android:padding="8dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/intTopicID"
                android:padding="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_topicID" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Creando POST en topic con título:"
                android:textAlignment="center"
                android:padding="8dp"
                android:layout_gravity="center"
                android:textSize="12sp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textTopicID"
                android:padding="8dp"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_topicID" />



        </LinearLayout>

    </androidx.cardview.widget.CardView>





</FrameLayout>