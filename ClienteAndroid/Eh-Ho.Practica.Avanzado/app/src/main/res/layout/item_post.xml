<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardviewPost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="8dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:elevation="16dp"
    android:outlineSpotShadowColor="@color/colorAccent"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelTopicID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/cardviewPost"
            tools:text="512" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/labelUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/labelTopicID"
            tools:text="512" />

          <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelTitlePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/labelUsername"
        android:maxLines="2"
        android:textSize="18sp"
        android:textStyle="bold"

        tools:text="Title" />



    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/labelDatePost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/labelTitlePost"
        android:textSize="14sp"

        tools:text="Just now" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />




    </LinearLayout>


</androidx.cardview.widget.CardView>